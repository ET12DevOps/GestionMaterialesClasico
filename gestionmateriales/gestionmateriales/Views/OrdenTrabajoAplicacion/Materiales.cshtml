                    <tr>
                        <th>
                        </th>
                        <th>
                        </th>
                        <th>
                            Código
                        </th>
                        <th>
                            Material
                        </th>
                        <th>
                            Stock Actual
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Opciones
                        </th>
                    </tr>
                </thead>
            </table>
            <script type="text/javascript" src="~/Scripts/Views/MaterialesOTA.js"></script>
        </div>
    </div>
</div>