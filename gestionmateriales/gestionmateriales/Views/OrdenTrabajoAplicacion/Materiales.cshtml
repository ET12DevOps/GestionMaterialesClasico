        <div class="col-md-6">
            <p>Número: <strong>@ViewData["numero"]</strong> - Nombre: <strong>@ViewData["nombre"]</strong></p>
        </div>
        <div class="offset-md-3 col-md-3">
            <a id="btn_generarordentrabajo" class="btn btn-outline-primary btn-block" href="~/OrdenTrabajoAplicacion" role="button" data-toggle="tooltip" data-placement="right" title="Genera orden de trabajo de aplicación"> Generar Orden de Trabajo</a>
