<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />

    <title>Pandora</title>

    <!--Dashboard Adminator-->
    <link href="~/Content/adminator/style.css" rel="stylesheet">
    <link href="~/Content/adminator/global.css" rel="stylesheet" />

    <!--Google Fonts-->
    <link href="~/Content/googlefonts/fuente.css" rel="stylesheet" />

    <!--JQuery-->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>

    <!--CSS Global-->
    <link href="~/Content/master.css" rel="stylesheet" />

    <!-- Bootstrap core CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    @*<script type="text/javascript" src="~/Scripts/popper.min.js"></script>*@
    @*<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>*@

    <!--Iconos y Fuentes-->
    <link href="~/Content/fontawesome/css/all.css" rel="stylesheet" type="text/css">

    <!--Datatables-->
    <link href="~/Scripts/Datatables/dataTables.min.css" rel="stylesheet">
    <script src="~/Scripts/Datatables/datatables.min.js"></script>

    <!--Bootstrap Notify-->
    <link rel="stylesheet" href="~/Content/bootstrap-notify/animate.css">
    <script type="text/javascript" src="~/Content/bootstrap-notify/bootstrap-notify.min.js"></script>
    <script type="text/javascript" src="~/Scripts/masterNotify.js"></script>
</head>
<body class="app">
    <div id="loader">
        <div class="spinner"></div>
    </div>
    <script>
        window.addEventListener('load', () => {
            const loader = document.getElementById('loader');
            setTimeout(() => {
                loader.classList.add('fadeOut');
            }, 300);
        });
    </script>
    <div>
        <div class="sidebar">
            <div class="sidebar-inner">
                <div class="sidebar-logo">
                    <div class="peers ai-c fxw-nw">
                        <div class="peer peer-greed">
                            <a class="sidebar-link td-n" href="~/Home">
                                <div class="peers ai-c fxw-nw">
                                    <div class="peer">
                                        <div class="logo"><img id="logoapp" src="~/Assets/logo-sm.png" alt=""></div>
                                    </div>
                                    <div class="peer peer-greed">
                                        <h5 id="nombreAplicacion" class="lh-1 mB-0 logo-text nombreAplicacion">Pandora</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="peer">
                            <div class="mobile-toggle sidebar-toggle"><a href="" class="td-n"><i class="fas fa-angle-left"></i></a></div>
                        </div>
                    </div>
                </div>
                <ul id="menuLateral" class="sidebar-menu scrollable pos-r">
                    @{ Html.RenderAction("Menu", "Home"); }
                </ul>
            </div>
        </div>
        <div class="page-container">
            <div class="header navbar">
                <div class="header-container">
                    <ul class="nav-left">
                        <li><a id="sidebar-toggle" class="sidebar-toggle" href="javascript:void(0);"><i class="far fa-bars"></i></a></li>
                    </ul>
                    <ul class="nav-right">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
            <main class="main-content fondo">
                @RenderBody()
            </main>
            <footer class="bdT ta-c p-30 lh-0 fsz-sm c-grey-600"><span>Pandora © @DateTime.Now.Year</span></footer>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/adminator/vendor.js"></script>
    <script type="text/javascript" src="~/Content/adminator/bundle.js"></script>
</body>
</html>