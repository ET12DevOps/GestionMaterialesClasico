@model gestionmateriales.Models.GestionMateriales.Material
@{
    ViewBag.Title = "Material";
}

<div id="page-wrapper">
    <div class="container">
        <br />
        <div class="row">
            <div class="container">
                <h2>Gestión de Materiales</h2>
            </div>
        </div>
        <h5>Agrega materiales o herramientas utilizadas para taller o reparaciones edilicias</h5>
        <hr />
        <div class="col-md-offset-1 col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Nuevo Material</h3>
                </div>
                <div class="panel-body">
                    @using (@Html.BeginForm("Agregar", "Material", FormMethod.Post))
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.codigo, "Código", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control", maxlength = 15, required = "true" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.nombre, "Nombre", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", maxlength = 75, required = "true" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Unidad, "Unidad", new { @class = "col-md-2 control-label" })
                                <div class="col-md-4">
                                    @Html.DropDownList("Unidad_Id", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                @Html.LabelFor(model => model.stockMinimo, "Stock Mínimo", new { @class = "col-md-3 control-label" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.stockMinimo, new { htmlAttributes = new { @class = "form-control", min = 1, required = "true" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TipoMaterial, "Tipo", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownList("TipoMaterial_Id", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Proveedor, "Proveedor", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownList("Proveedor_Id", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.detalle, "Detalle", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.detalle, new { @class = "form-control", @cols = 80, @rows = 3, maxlength = 100 })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <input type="reset" class="btn btn-default btn-block" value="Limpiar" data-toggle="tooltip" data-placement="right" title="Vacia todos los campos del formulario" />
                                </div>
                                <div class="col-md-offset-3 col-md-3">
                                    <input type="submit" class="btn btn-primary btn-block" value="Aceptar" data-toggle="tooltip" data-placement="right" title="Confirma la operación" />
                                </div>
                                <div class="col-md-3">
                                    <input type="button" class="btn btn-default btn-block" onclick="location.href='Index'" value="Cancelar" data-toggle="tooltip" data-placement="right" title="Regresa a la pantalla anterior" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            @if (ViewBag.Result == true)
            {
                <div id="alert_message" class="alert alert-success">
                    Los datos se guardaron con éxito.
                </div>
            }
        </div>
    </div>
</div>

