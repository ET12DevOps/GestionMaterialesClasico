@model IEnumerable<gestionmateriales.Models.GestionMateriales.Material>
    @{
        ViewBag.Title = "Material";
    }

    <div id="page-wrapper">
        <br />
        <div class="row">
            <div class="container">
                <h2>Material</h2>
            </div>
        </div>
        <hr />
        <div class=" row">

            @using (Html.BeginForm("Buscar", "Material", FormMethod.Get))
            {
                <div class="input-group col-md-offset-8 col-md-4">
                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Ingrese nombre..", maxlength = 45 })
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Buscar</button>
                    </span>
                </div>
            }

        </div>

        <br>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th>
                            Código
                        </th>
                        <th>
                            @Html.ActionLink("Nombre", "Buscar", new { sortOrder = ViewBag.NombreSortParm, currentFilter = ViewBag.CurrentFilter })
                        </th>
                        <th>
                            Stock Actual
                        </th>
                        <th>
                            Stock Mínimo
                        </th>
                        <th>
                            Estado
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-pencil" aria-hidden=true></span>
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-trash" aria-hidden=true></span>
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.codigo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stockActual)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.stockMinimo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.estado)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", new { id = item.idMaterial })
                            </td>
                            <td>
                                @Html.ActionLink("Borrar", "Borrar", new { id = item.idMaterial })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
