@model gestionmateriales.Models.OficinaTecnica.Documentos.OrdenCompra

<link href="~/Content/datetimepicker/css/bootstrap-datepicker.min.css" />
<script src="~/Content/datetimepicker/js/bootstrap-datepicker.min.js"></script>
<script src="~/Content/datetimepicker/bootstrap-datepicker.es.min.js"></script>

<div class="card shadow">
    <div class="card-body">
        <h1>Orden Compra</h1>
        <p>Genera una nueva orden de compra</p>
    </div>
</div>
<br />
<div class="card shadow">
    <div class="card-body">
        @using (@Html.BeginForm("Agregar", "OrdenCompra", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.numeroInterno, "Número Interno", new { @class = "control-label" })
                        @Html.EditorFor(model => model.numeroInterno, new { htmlAttributes = new { @class = "form-control", min = 1, autofocus = "true", required = "true", autocomplete = "off" } })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.numeroFactura, "Número Factura", new { @class = "control-label" })
                        @Html.EditorFor(model => model.numeroFactura, new { htmlAttributes = new { @class = "form-control", min = 1, autocomplete = "off" } })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.fecha, "Fecha", new { @class = "control-label" })
                        @*@Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", required = "true", autocomplete = "off", type = "date" } })*@
                        <div class="input-group">
                            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", required = "true", type = "text", autocomplete = "off", id = "datePicker" } })
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.proveedor, "Proveedor", new { @class = "control-label" })
                        @Html.DropDownList("idProveedor", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.responsable, "Responsable", new { @class = "control-label" })
                        @Html.DropDownList("idResponsable", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.total, "Monto Total", new { @class = "control-label" })
                        @Html.EditorFor(model => model.total, new { htmlAttributes = new { @class = "form-control", min = 1, autocomplete = "off", @readonly = "true" } })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.chequeNro, "Número Cheque", new { @class = "control-label" })
                        @Html.EditorFor(model => model.chequeNro, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <input type="reset" class="btn btn-outline-secondary btn-block" value="Limpiar" title="Vacia campos del formulario" />
                    </div>
                    <div class="offset-6 col-md-2">
                        <button type="submit" class="btn btn-primary btn-block">Agregar Materiales</button>
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-outline-secondary btn-block" role="button" href="~/OrdenCompra" title="Regresa a la pantalla anterior"><i class="far fa-arrow-alt-to-left"></i> Volver</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@if (ViewBag.Result == 1)
{
    <script type="text/javascript">
        ShowNotificationDanger('Orden de Compra', 'El Número Interno ya existe, verifique el valor');
    </script>
}

<script type="text/javascript">
    $(function () {
        $('#datePicker').datepicker({
            language: "es",
            orientation: "bottom auto",
            todayHighlight: true,
            autoclose: true
        });
    });
</script>