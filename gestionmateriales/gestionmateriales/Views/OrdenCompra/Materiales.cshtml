<h1>Orden de Compra</h1>
<div class="row">
    <div class="offset-10 col-md-2">
        <a id="btn_generarOrdenCompra" class="btn btn-outline-primary btn-block btn-sm" href="~/OrdenCompra"><i class="far fa-check"></i> Generar</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-3">
        <p>Proveedor: <strong>@ViewData["proveedor"]</strong></p>
    </div>
    <div class="offset-3 col-3">
        <p>Número Interno: <strong>@ViewData["numeroInterno"]</strong></p>
    </div>
    <div class="col-3">
        <p>Número Factura: <strong>@ViewData["numeroFactura"]</strong></p>
    </div>
</div>
<div class="row">
    <div class="col-3">
        <p>Responsable: <strong>@ViewData["responsable"]</strong></p>
    </div>
    <div class="offset-3 col-3">
        <p>Fecha: <strong>@ViewData["fecha"]</strong></p>
    </div>
    <div class="col-3">
        <p>Cheque: <strong>@ViewData["cheque"]</strong></p>
    </div>
</div>
<hr />

<input type="hidden" id="IdOc" value="@ViewData["idOc"]" />
<div class="card">
    <div class="card-body">
        <table id="grdMateriales" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>  </th>
                    <th></th>
                    <th>Codigo Material</th>
                    <th>Material </th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>SubTotal</th>
                    <th>Opciones</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="card-footer h5">
        Total: <strong>$ <span id="totalOC"></span></strong>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/MasterDataTables.js"></script>
<script type="text/javascript" src="~/Scripts/Views/OrdenCompra/Materiales.js"></script>
