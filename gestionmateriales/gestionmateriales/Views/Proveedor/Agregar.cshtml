@model gestionmateriales.Models.GestionMateriales.Proveedor
@{
    ViewBag.Title = "Proveedor";
}

<div id="page-wrapper">
    <div class="container">
        <br />
        <div class="row">
            <div class="container">
                <h2>Gestión de Proveedores</h2>
            </div>
        </div>
        <h5>Agrega nuevo proveedor para comprar materiales o herramientas</h5>
        <hr />
        <div class="col-sm-offset-1 col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Datos Proveedor</h3>
                </div>
                <div class="panel-body">
                    @using (@Html.BeginForm("Agregar", "Proveedor", FormMethod.Post))
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.nombre, "Nombre", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", maxlength = 45, required = "true", title = "Solo se admiten letras.", pattern = "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.cuit, "CUIT", new { @class = "col-md-2 control-label" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.cuit, new { htmlAttributes = new { @class = "form-control", maxlength = 45, required = "true", title = "Solo se admiten guiones y numeros..", pattern = "^[0-9]+$" } })
                                </div>
                                @Html.LabelFor(model => model.razonSocial, "Razon Social", new { @class = "col-md-2 control-label" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.razonSocial, new { htmlAttributes = new { @class = "form-control", maxlength = 15, required = "true", title = "Solo se admiten letras.", pattern = "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.telefono, "Teléfono", new { @class = "col-md-2 control-label" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", maxlength = 20, required = "true", title = "Solo se admiten guiones y números.", pattern = "^[0-9]+$" } })
                                </div>
                                @Html.LabelFor(model => model.direccion, "Dirección", new { @class = "col-md-2 control-label" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control", maxlength = 100, required = "true" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.horario, "Horario", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.horario, new { htmlAttributes = new { @class = "form-control", maxlength = 20, required = "false" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.nombreContacto, "Contacto", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.nombreContacto, new { htmlAttributes = new { @class = "form-control", maxlength = 45, required = "false", title = "Solo se admiten letras.", pattern = "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$" } })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <input type="reset" class="btn btn-default btn-block" value="Limpiar" data-toggle="tooltip" data-placement="right" title="Vacia todos los campos del formulario" />
                                </div>
                                <div class="col-md-offset-3 col-md-3">
                                    <input type="submit" class="btn btn-primary btn-block" value="Aceptar" data-toggle="tooltip" data-placement="right" title="Confirma la operación" />
                                </div>
                                <div class="col-md-3">
                                    <input type="button" class="btn btn-default btn-block" onclick="location.href='Index'" value="Cancelar" data-toggle="tooltip" data-placement="right" title="Regresa a la pantalla anterior" />
                                </div>
                            </div>
                      </div>
                    }
                 </div>
            </div>
            @if (ViewBag.Result == true)
            {
                <div id="alert_message" class="alert alert-success">
                    Los datos se guardaron con éxito.
                </div>
            }
        </div>
    </div>
</div>

