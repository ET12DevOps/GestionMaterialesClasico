@{
    ViewBag.Title = "Personal";
}

<div class="container-fluid">
    <h1 class="display-4">Personal</h1>
    <div class="row">
        <div class="col-md-6">
            <p>Personal del area de taller o especialidad autorizado para solicitar y retirar materiales.</p>
        </div>
        <div class="offset-md-4 col-md-2">
            <a id="btn_crearPersonal" class="btn btn-outline-primary btn-block" href="~/Personal/Agregar" role="button" data-toggle="tooltip" data-placement="right" title="Agregar nuevo personal para solicitar y/o retirar materiales"><i class="fas fa-male"></i> Nuevo Personal</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <table id="grdPersonal" class="table table-bordered table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>
                        idPersonal
                    </th>
                    <th>
                        Nombre y Apellido
                    </th>
                    <th>
                        Dni
                    </th>
                    <th>
                        Ficha Censal
                    </th>
                    <th>
                        Opciones
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/Views/Personal.js"></script>
