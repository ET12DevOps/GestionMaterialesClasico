@{
    ViewBag.Title = "Personal";
}


    <h1 class="display-4">Personal</h1>
    <div class="row">
        <div class="col-md-6">
            <p>Personal del area de taller o especialidad autorizado para solicitar y retirar materiales.</p>
        </div>
        <div class="offset-md-4 col-md-2">
            <a id="btn_crearPersonal" class="btn btn-outline-primary btn-block" href="~/Personal/Agregar"><i class="far fa-male"></i> Nuevo Personal</a>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <table id="grdPersonal" class="table table-bordered table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            idPersonal
                        </th>
                        <th>
                            Nombre y Apellido
                        </th>
                        <th>
                            Dni
                        </th>
                        <th>
                            Ficha Censal
                        </th>
                        <th>
                            Opciones
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="card-footer">
            <div id="lastUpdated"></div>
        </div>
    </div>   

<script type="text/javascript" src="~/Scripts/Views/Personal.js"></script>
