@model IEnumerable<gestionmateriales.Models.GestionMateriales.Personal>
@{
    ViewBag.Title = "Personal";
}

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="container">
            <h2>Personal</h2>
        </div>
    </div>
    <hr />
    <div class="col-md-4">
        Total Personal: <strong>@ViewData["totPersonal"]</strong>
    </div>
    <div class=" row">
        @using (Html.BeginForm("Buscar", "Personal", FormMethod.Get))
        {
            <div class="input-group col-md-offset-8 col-md-4">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Ingrese nombre o apellido..", maxlength = 45 })

                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Buscar</button>
                </span>
            </div>
        }

    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            <table id="#tabla_personal" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.ActionLink("Nombre y Apellido", "Buscar", new { sortOrder = ViewBag.NombreSortParm, currentFilter = ViewBag.CurrentFilter })
                        </th>
                        <th>
                            Ficha Censal
                        </th>
                        <th>
                            DNI
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-pencil" aria-hidden=true></span>
                        </th>
                        <th>
                            <span class="glyphicon glyphicon-trash" aria-hidden=true></span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fichaCensal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dni)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", new { id = item.idPersonal })
                            </td>
                            <td>
                                <a href="" data-toggle="modal" data-target="#myModal-@item.idPersonal">Borrar</a>

                                <div class="modal fade" id="myModal-@item.idPersonal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="myModalLabel">Borrar Personal</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p>¿Desea borrar la siguiente persona del sistema?</p>
                                                <p><strong>Nombre y Apellido:</strong> @item.nombre</p>
                                                <p><strong>Ficha Censal:</strong> @item.fichaCensal</p>
                                                <p><strong>DNI:</strong> @item.dni</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="~/Personal/Borrar/@item.idPersonal" type="button" class="btn btn-primary">Aceptar</a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
