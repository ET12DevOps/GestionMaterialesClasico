@model IEnumerable<gestionmateriales.Models.GestionMateriales.Personal>
@{
    ViewBag.Title = "Personal";
}

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="container">
            <h2>Personal</h2>
        </div>
    </div>
    <hr />
    <div class=" row">
        @using (Html.BeginForm("Buscar", "Personal", FormMethod.Get))
        {
            <div class="input-group col-md-offset-8 col-md-4">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Ingrese nombre o apellido..", maxlength = 45 })

                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Buscar</button>
                </span>
            </div>
        }

    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-hover">
                <tr>
                    <th>
                        @Html.ActionLink("Nombre y Apellido", "Buscar", new { sortOrder = ViewBag.NombreSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        Ficha Censal
                    </th>
                    <th>
                        DNI
                    </th>
                    <th>
                        <span class="glyphicon glyphicon-pencil" aria-hidden=true></span>
                    </th>
                    <th>
                        <span class="glyphicon glyphicon-trash" aria-hidden=true></span>
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fichaCensal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dni)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Editar", new { id = item.idPersonal })
                        </td>
                        <td>
                            @Html.ActionLink("Borrar", "Borrar", new { id = item.idPersonal })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
