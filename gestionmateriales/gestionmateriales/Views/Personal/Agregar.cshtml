@model gestionmateriales.Models.OficinaTecnica.GestionMateriales.Personal
@{
    ViewBag.Title = "Personal";
}

<div class="container-fluid">
    <h1 class="display-4">Personal</h1>
    <p>Agregar nuevo personal para solicitar y/o retirar materiales.</p>
    <hr />
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Información personal
            </div>
            <div class="card-body">
                @using (@Html.BeginForm("Agregar", "Personal", FormMethod.Post))
                {
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.nombre, "Nombre y Apellido", new { @class = "control-label" })
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", maxlength = 45, required = "true", autofocus = "true", title = "Solo se admiten letras.", pattern = "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$" }, autocomplete = "off" })
                        </div>
                        <div class="form row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.fichaCensal, "Ficha Censal", new { @class = "control-label" })
                                @Html.EditorFor(model => model.fichaCensal, new { htmlAttributes = new { @class = "form-control", min = 100000, max = 999999, maxlength = 6, required = "true", autocomplete = "off" } })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.dni, "DNI", new { @class = "control-label" })
                                @Html.EditorFor(model => model.dni, new { htmlAttributes = new { @class = "form-control", min = 10000000, max = 99999999, maxlength = 8, required = "true", autocomplete = "off" } })
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row justify-content-between">
                            <div class="col-2">
                                <input id="btn_limpiar" type="reset" class="btn btn-default btn-block" value="Limpiar" data-toggle="tooltip" data-placement="left" title="Vacia los campos del formulario" />
                            </div>

                            <div class="col-2 offset-6">
                                <input id="btn_aceptar" type="submit" class="btn btn-primary btn-block" value="Aceptar" data-toggle="tooltip" data-placement="bottom" title="Confirma la operación" />
                            </div>

                            <div class="col-2">
                                <input id="btn_cancelar" type="button" class="btn btn-default btn-block" onclick="location.href='Index'" value="Volver" data-toggle="tooltip" data-placement="right" title="Regresa a la pantalla anterior" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        @if (ViewBag.Result == 0)
        {
            <script type="text/javascript">
                $('#nombre').val('');
                $('#fichaCensal').val('');
                $('#dni').val('');
                $.notify(
                    {
                        message: 'Los datos se guardaron con éxito'
                    },
                    {
                        type: 'success',
                        animate: {
                            enter: 'animated bounceInDown',
                            exit: 'animated bounceOutUp'
                        },
                        placement: {
                            from: 'top',
                            align: 'right'
                        },
                        offset: {
                            x: 25,
                            y: 75
                        },
                        delay: 1000
                    }
                );
            </script>
        }
        @if (ViewBag.Result == 1)
        {
            <script type="text/javascript">
                $.notify(
                    {
                        message: 'El DNI o Ficha Censal ya existe, verifique el valor'
                    },
                    {
                        type: 'danger',
                        animate: {
                            enter: 'animated bounceInDown',
                            exit: 'animated bounceOutUp'
                        },
                        placement: {
                            from: 'top',
                            align: 'center'
                        },
                        offset: {
                            y: 75
                        },
                        delay: 1000
                    }
                );
            </script>
        }
        <script type="text/javascript">
            $('#btn_limpiar').tooltip();
            $('#btn_aceptar').tooltip();
            $('#btn_cancelar').tooltip();
        </script>
    </div>

</div>