@model IEnumerable<gestionmateriales.Models.GestionMateriales.OrdenTrabajo>
@{
    ViewBag.Title = "OrdenTrabajo";
}

<div id="page-wrapper">
    <br />
    <div class="row">
        <div class="container">
            <h2>Buscar Orden de Trabajo</h2>
        </div>
    </div>
    <hr />
    <div class=" row">

        @using (Html.BeginForm("Buscar", "OrdenTrabajo", FormMethod.Get))
        {
            <div class="col-xs-offset-6 col-md-3">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Buscar Nro, Nombre o Responsable", maxlength = 45 })
            </div>
            <button class="btn btn-default" type="submit">Buscar</button>
        }

    </div>

    <br>
    <div class="row">
        <div class="col-xs-offset-2 col-md-8">
            <table class="table table-bordered table-striped table-hover text-center table-condensed">
                <tr>
                    <th>
                        Numero
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Turno
                    </th>
                    <th>
                        @Html.ActionLink("Nombre", "Buscar", new { sortOrder = ViewBag.NombreSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        Responsable
                    </th>
                    <th>
                        Jefe de Seccion
                    </th>
                    <th>
                        Editar
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nroOrdenTrabajo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fecha.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Turno.nombreTurno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombreTrabajo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Responsable.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JefeSeccion.nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Editar", new { id = item.idOrdenTrabajo })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
