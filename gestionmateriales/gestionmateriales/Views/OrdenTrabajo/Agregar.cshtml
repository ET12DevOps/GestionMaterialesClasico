@model gestionmateriales.Models.GestionMateriales.OrdenTrabajo
@{
    ViewBag.Title = "Orden de Trabajo";
}

<div id="page-wrapper">
    <br />
    <div class="container">
        <h2>Agregar Orden de Trabajo</h2>
        <hr />
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Nueva Orden de Trabajo</h3>
                </div>
                <div class="panel-body">
                    @using (@Html.BeginForm("Agregar", "OrdenTrabajo", FormMethod.Post))
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.nroOrdenTrabajo, "Número", new { @class = "col-md-2 control-label" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.nroOrdenTrabajo, new { htmlAttributes = new { @class = "form-control", min = 1, required = "true" } })
                                </div>
                                @Html.LabelFor(model => model.nombreTrabajo, "Nombre", new { @class = "col-md-2 control-label" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.nombreTrabajo, new { htmlAttributes = new { @class = "form-control", maxlength = 70, required = "true" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Turno, "Turno", new { @class = "col-md-2 control-label" })
                                <div class="col-md-3">
                                    @Html.DropDownList("Turno_Id", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                @Html.LabelFor(model => model.fecha, "Fecha", new { @class = "col-md-2 control-label" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Responsable, "Responsable", new { @class = "col-md-2 control-label" })
                                <div class="col-md-4">
                                    @Html.DropDownList("Responsable_Id", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                @Html.LabelFor(model => model.JefeSeccion, "Jefe de Sección", new { @class = "col-md-2 control-label" })
                                <div class="col-md-4">
                                    @Html.DropDownList("JefeSeccion_Id", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <input type="reset" class="btn btn-default btn-block" value="Limpiar" />
                                </div>
                                <div class="col-md-offset-3 col-md-3">
                                    <input type="submit" class="btn btn-primary btn-block" value="Agregar Materiales" />
                                </div>
                                <div class="col-md-3">
                                    <input type="button" class="btn btn-default btn-block" onclick="location.href='../Index'" value="Cancelar" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

