@model gestionmateriales.Models.GestionMateriales.pedido
@{
    ViewBag.Title = "Pedidos";
}

<div id="page-wrapper">
    <div class="container">
        <h1>Editar Pedidos</h1>
        <hr />
        <div class="col-sm-offset-2 col-md-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Editar Pedidos</h3>
                </div>
                <div class="panel-body">
                    @using (@Html.BeginForm("Editar", "Pedidos", new { id = Model.nroPedido }, FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="unPedido" class="col-sm-offset-1 col-md-4">nroPedido</label>
                            @Html.EditorFor(model => model.nroPedido, new { htmlAttributes = new { @class = "form-control", min = 1, max = 99999999, maxlength = 8, required = "true" } })
                        </div>
                        <div class="form-group">
                            <label for="unaOrden" class="col-sm-offset-1 col-md-4">ODT</label>
                            @Html.EditorFor(model => model.nroOrdenDeTrabajo, new { htmlAttributes = new { @class = "form-control", min = 1, max = 99999999, maxlength = 8, required = "true" } })
                        </div>
                        <div class="form-group">
                            <label for="unDestino" class="col-sm-offset-1 col-md-4">Destino</label>
                            @Html.EditorFor(model => model.destino, new { htmlAttributes = new { @class = "form-control", minlength = 5, maxlength = 50, required = "true", title = "Solo se admiten letras.", pattern = "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$" } })
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-10">
                                <input type="reset" class="btn btn-default" value="Limpiar" />
                            </div>
                            <div class="col-xs-6 col-md-1">
                                <input type="submit" class="btn btn-primary" value="Aceptar" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

