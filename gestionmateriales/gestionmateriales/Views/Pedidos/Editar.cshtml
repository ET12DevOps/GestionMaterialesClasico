@model gestionmateriales.Models.GestionMateriales.Pedido
@{
    ViewBag.Title = "Pedidos";
}

<div id="page-wrapper">
    <br />
    <div class="container">
        <h1>Editar Pedido</h1>
        <hr />
        <div class="col-sm-offset-2 col-md-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Editar Pedido</h3>
                </div>
                <div class="panel-body">
                    @using (@Html.BeginForm("Editar", "Pedidos", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.nroPedido, "Número Orden de Pedido", new { @class = "col-md-5 control-label" })
                            @Html.EditorFor(model => model.nroPedido, new { htmlAttributes = new { @class = "form-control", min = 1, max = 999999, required = "true", title = "Solo se admiten letras.", pattern = "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.nroOrdenDeTrabajo, "Número Orden de Trabajo", new { @class = "col-md-6 control-label" })
                            @Html.EditorFor(model => model.nroOrdenDeTrabajo, new { htmlAttributes = new { @class = "form-control", min = 1, max = 999999, required = "true", title = "Solo se admiten letras.", pattern = "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.destino, "Destino", new { @class = "col-md-12 control-label" })
                            @Html.TextAreaFor(model => model.destino, new { @class = "form-control", @cols = 80, @rows = 3, maxlength = 150, required = "true" })
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-8">
                                <input type="reset" class="btn btn-default" value="Restaurar Valores" />
                            </div>
                            <div class="col-xs-1 col-md-2">
                                <input type="submit" class="btn btn-primary" value="Aceptar" />
                            </div>
                            <div class="col-xs-1 col-md-1">
                                <input type="button" class="btn btn-default" onclick="location.href='../Buscar'" value="Cancelar" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

